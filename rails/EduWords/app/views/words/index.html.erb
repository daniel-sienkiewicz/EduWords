<% if member_signed_in? %>
<h1>Listing words</h1>

<table>
  <thead>
    <tr>
      <th>Name 1</th>
      <th>Name 2</th>
      <th>Member</th>
      <th>Language 1</th>
      <th>Language 2</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @words.each do |word| %>
      <tr>
        <td><%= word.namelanguage1 %></td>
        <td><%= word.namelanguage2 %></td>
        <td><%= Member.find(word.member_id).username %></td>
        <td><%= word.language1_id %></td>
        <td><%= word.language2_id %></td>
        <td><%= link_to 'Show', word %></td>
        <td><%= link_to 'Edit', edit_word_path(word) %></td>
        <td><%= link_to 'Destroy', word, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Word', new_word_path %>
<% else %>
  Access denied
<% end %>
