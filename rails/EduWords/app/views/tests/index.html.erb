<div class="list">
	<div class="table-responsive">
		<table class="table table-striped">
			<thead>
				<tr>
					<th>#</th>
					<th><%= t('result') %></th>
					<th><%= t('date') %></th>
					<% if current_member.role == 'admin' %>
					<th>User</th>
					<th><%= t('edit') %></th>
					<% end %>
					<th><%= t('destroy') %></th>
				</tr>
			</thead>
			<tbody>
				<% i = 0 %>
				<% @tests.each do |test| %>
				<tr>
					<td><%= i = i + 1 %></td>
					<td><%= test.result %></td>
					<td><%= test.date %></td>
					<% if current_member.role == 'admin' %>
					<td><%= Member.find(test.member_id).username %></td>
					<td><a href='<%= edit_test_path(test) %>'>
					<button type="button" class="btn btn-xs btn-success">
						Edit &raquo;
					</button></a></td>
					<% end %>
					<td><%= link_to test, method: :delete, data: { confirm: t('areYouSure') } do %><i class="fa fa-times fa-2x"></i><% end %></td>
				</tr>
				<% end %>
			</tbody>
		</table>
	</div>
</div>
