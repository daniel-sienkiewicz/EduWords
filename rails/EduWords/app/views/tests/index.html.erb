<h1>Listing tests</h1>

<div class="table-responsive">
	<table class="table table-striped">
		<thead>
			<tr>
				<th>#</th>
				<th>Result</th>
				<th>Tags</th>
				<th>Date</th>
				<% if current_member.role == 'admin' %>
				<th>User</th>
				<th>Edit</th>
				<% end %>
				<th>Delete</th>
			</tr>
		</thead>
		<tbody>
			<% i = 0 %>
			<% @tests.each do |test| %>
			<tr>
				<td><%= i = i + 1 %></td>
				<td><%= test.result %></td>
				<td><% test.tags.each do |tag| %>
				<%= tag.name %> <%end %></td>
				<td><%= test.date %></td>
				<% if current_member.role == 'admin' %>
				<td><%= Member.find(test.member_id).username %></td>
				<td><a href='<%= edit_test_path(test) %>'>
				<button type="button" class="btn btn-xs btn-success">
					Edit &raquo;
				</button></a></td>
				<% end %>
				<td><%= link_to test, method: :delete, data: { confirm: 'Are you sure?' } do %>
				<button type="button" class="btn btn-xs btn-success">
					Destroy &raquo;
				</button><% end %></td>
			</tr>
			<% end %>
		</tbody>
	</table>
</div>
All tests:
<%= @tests.count %>
