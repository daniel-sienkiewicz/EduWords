<div class="show">
	<div class="row">
		<div class="col-md-3 col-md-offset-4 titledata">
			Name:
		</div>
		<div class="col-md-3 userdata">
			<%= @tag.name %>
		</div>
	</div>
	
	<% if current_member.role == 'admin'%>
	
	<div class="row">
		<div class="col-md-3 col-md-offset-4 titledata">
			Member:
		</div>
		<div class="col-md-3 userdata">
			<%= Member.find(@tag.member_id).username %>
		</div>
	</div>

	
	<% end %>

	<div class="row">
		<div class="col-md-4 col-md-offset-4">

		<%= link_to 'Edit', edit_tag_path(@tag), :class => "btn btn-primary btn-edit" %>
			<%= link_to 'Back', tags_path, :class => "btn btn-default btn-back" %>
		</div>
	</div>
</div>