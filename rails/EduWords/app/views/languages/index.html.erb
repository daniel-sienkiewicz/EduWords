<div class="table-responsive">
  <table class="table table-striped">
    <thead>
      <tr>
        <th>#</th>
        <th><%= t('name') %></th>
        <% if current_member.role == 'admin' %>
          <th>User</th>
        <% end %>
        <th><%= t('edit') %></th>
        <th><%= t('show') %></th>
        <th><%= t('destroy') %></th>
      </tr>
    </thead>
    <tbody>
      <% i = 0 %>
      <% @languages.each do |language| %>
        <tr>
          <td><%= i = i + 1 %></td>
          <td><%= language.name %></td>
          <% if current_member.role == 'admin' %>
            <td><%= Member.find(language.member_id).username %></td>
          <% end %>
          <td><a href='<%= edit_language_path(language) %>'><i class="fa fa-pencil fa-2x"></i></a></td>
              <td><a href='/languages/<%= language.id %>'><i class="fa fa-search fa-2x"></i></a></td>
              <td><%= link_to language, method: :delete, data: { confirm: t('areYouSure') } do %><i class="fa fa-times fa-2x"></i><% end %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>

<br>
<p><a href=<%= new_language_path %> class="btn btn-primary btn-lg" role="button"><%= t('newLanguage')%> &raquo;</a></p>